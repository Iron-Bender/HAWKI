# =====================================================
# HAWKI - Staging Environment Defaults
# =====================================================
# These values are automatically loaded in staging mode
# User-specific secrets should be in .env
# =====================================================

# Environment
APP_NAME=HAWKI2
APP_ENV=staging
APP_DEBUG=true
LOG_LEVEL=debug

# Project Configuration
PROJECT_NAME=hawki-staging
PROJECT_HAWKI_IMAGE=hawki:staging

# Docker Configuration
DOCKER_PROJECT_IP=0.0.0.0  # Bind to all interfaces for remote access

# Database Configuration (Docker services)
DB_CONNECTION=mysql
DB_HOST=mysql
DB_PORT=3306
DB_EXTERNAL_PORT=3307
DB_DATABASE=hawki
DB_USERNAME=hawki

# Redis Configuration (Docker service)
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_USERNAME=default
CACHE_STORE=redis

# Logging
LOG_CHANNEL=stderr

# File Converter (Docker service)
FILE_CONVERTER=hawki_converter
HAWKI_FILE_CONVERTER_API_URL=http://file-converter:8001/extract

# Nginx Configuration
NGINX_SERVER_NAME=staging.hawki.dev
NGINX_HTTP_PORT=80
NGINX_HTTPS_PORT=443
NGINX_EXTRA_PORT=
NGINX_ENABLE_IPV6=false
NGINX_HTTP2_STYLE=new

# Docker User Mapping (use www-data for staging/prod)
DOCKER_UID=33
DOCKER_GID=33

# Proxy Configuration (leave empty if not needed)
DOCKER_HTTP_PROXY=http://10.60.3.254:3128
DOCKER_HTTPS_PROXY=http://10.60.3.254:3128
DOCKER_NO_PROXY=localhost,127.0.0.1

# Laravel Reverb Configuration (WebSocket)
# Reverb: Websocket Server
# ========================
REVERB_APP_ID=1001
REVERB_APP_KEY=hawki-reverb
REVERB_APP_SECRET=secret
# REVERB_HOST will be set by env-init.sh based on NGINX_SERVER_NAME
# Default to NGINX_SERVER_NAME if not explicitly set
REVERB_HOST=staging.hawki.dev
REVERB_PORT=443
REVERB_SCHEME=https
REVERB_SERVER_HOST=0.0.0.0
REVERB_SERVER_PORT=8080
REVERB_APP_MAX_MESSAGE_SIZE=250000

# ===========================
# Vite Environment Configuration
# ===========================
VITE_APP_NAME="${APP_NAME}"
VITE_REVERB_APP_KEY=hawki-reverb
# VITE_REVERB_HOST will be set by env-init.sh based on NGINX_SERVER_NAME
# Default to NGINX_SERVER_NAME if not explicitly set
VITE_REVERB_HOST=staging.hawki.dev
VITE_REVERB_PORT=443
VITE_REVERB_SCHEME=https
