# =====================================================
# HAWKI - Development Environment Defaults
# =====================================================
# These values are automatically loaded in dev mode
# User-specific secrets should be in .env (auto-generated)
# =====================================================

# Environment
APP_NAME=HAWKI2
APP_ENV=local
APP_DEBUG=true
LOG_LEVEL=debug

# Project Configuration
PROJECT_NAME=hawki-dev
PROJECT_HAWKI_IMAGE=hawki:dev-local

# Docker Configuration
DOCKER_PROJECT_IP=127.0.0.1

# Database Configuration (Docker services)
DB_CONNECTION=mysql
DB_HOST=mysql
DB_PORT=3306
DB_DATABASE=hawki
DB_USERNAME=hawki

# Redis Configuration (Docker service)
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_USERNAME=default
CACHE_STORE=redis

# Logging
LOG_CHANNEL=stderr

# File Converter (Docker service)
FILE_CONVERTER=hawki_converter
HAWKI_FILE_CONVERTER_API_URL=http://file-converter:8001/extract

# Nginx Configuration
NGINX_SERVER_NAME=app.hawki.dev
NGINX_HTTP_PORT=80
NGINX_HTTPS_PORT=443
NGINX_EXTRA_PORT=
NGINX_ENABLE_IPV6=false
NGINX_HTTP2_STYLE=new

# Docker User Mapping (for permission-less development)
# Will be auto-set to current user by env-init.sh
# DOCKER_UID=501
# DOCKER_GID=1000

# Proxy Configuration (leave empty if not needed)
DOCKER_HTTP_PROXY=
DOCKER_HTTPS_PROXY=
DOCKER_NO_PROXY=localhost,127.0.0.1

# ========================
# Reverb: Websocket Server
# ========================
REVERB_APP_ID=hawki-dev
REVERB_APP_KEY=hawki2
REVERB_APP_SECRET=dev-secret-key-changeme
REVERB_HOST=app.hawki.dev
REVERB_PORT=443
REVERB_SCHEME=https
REVERB_SERVER_HOST=0.0.0.0
REVERB_SERVER_PORT=8080
REVERB_APP_MAX_MESSAGE_SIZE=250000

# ===========================
# Vite Environment Configuration
# ===========================
VITE_APP_NAME="${APP_NAME}"
VITE_REVERB_APP_KEY=hawki2
VITE_REVERB_HOST=app.hawki.dev
VITE_REVERB_PORT=443
VITE_REVERB_SCHEME=https

# ==================
# Event Broadcasting
# ==================
BROADCAST_CONNECTION=reverb
BROADCAST_DRIVER=reverb
